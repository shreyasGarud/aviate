<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePageFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/myProfile_text"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:text="My Profile Page"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/name_profile_text"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="64dp"
                    android:text="Shreyas Garud"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/myProfile_text" />

                <TextView
                    android:id="@+id/birthDate_profile_text"
                    android:layout_width="101dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="74dp"
                    android:text="08/10/1999"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name_profile_text" />

                <TextView
                    android:id="@+id/phone_profile_text"
                    android:layout_width="105dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="69dp"
                    android:text="8007770794"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/birthDate_profile_text" />

                <TextView
                    android:id="@+id/bio_profile_text"
                    android:layout_width="108dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:text="Bio :"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phone_profile_text" />

                <TextView
                    android:id="@+id/location_profile_text"
                    android:layout_width="116dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="12dp"
                    android:text="Location:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bio_profile_text" />

                <TextView
                    android:id="@+id/connections_profile_text"
                    android:layout_width="126dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="12dp"
                    android:text="connections :"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/location_profile_text" />

                <TextView
                    android:id="@+id/visit_profile_text"
                    android:layout_width="134dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="12dp"
                    android:text="No. of visits :"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/connections_profile_text" />

                <TextView
                    android:id="@+id/education_profile_text"
                    android:layout_width="136dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="12dp"
                    android:text="Education :"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/visit_profile_text" />

                <TextView
                    android:id="@+id/business_profile_text"
                    android:layout_width="132dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="12dp"
                    android:text="Business :"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/education_profile_text" />

                <TextView
                    android:id="@+id/businessName_profile_text"
                    android:layout_width="106dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="8dp"
                    android:text="Name :"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/business_profile_text" />

                <TextView
                    android:id="@+id/category_profile_text"
                    android:layout_width="189dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="12dp"
                    android:text="Category Description :"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/businessName_profile_text" />

                <TextView
                    android:id="@+id/card_profile_text"
                    android:layout_width="142dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="12dp"
                    android:text="card :"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/category_profile_text" />

                <TextView
                    android:id="@+id/haves_profile_text"
                    android:layout_width="141dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:text="Haves :"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_profile_text" />

                <TextView
                    android:id="@+id/wants_text"
                    android:layout_width="142dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:text="Wants :"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/haves_profile_text" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="113dp"
                    android:layout_height="104dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:src="@android:drawable/ic_delete"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/myProfile_text" />

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>